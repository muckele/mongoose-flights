<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please first ensure that the meal is not in the dropdown
    <select id="meal-select">
      <% meals.forEach(function(meal) { %>
        <option><%= meal.meal %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="meal-input">Meal:</label>
    <input type="text" name="meal" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

<%- include("../partials/footer") %>